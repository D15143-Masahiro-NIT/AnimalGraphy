.mt-5
  - @posts.each do |post|
    .card.w-50.mx-auto.mt-1
      .card-body
        %a.d-flex.align-items-center{ href: "/users/#{post.user_id}" }
          .user-image
            = image_tag(post.user.image.thumb.url, class: 'rounded float-left', loading: 'lazy')
          %p.font-weight-bold.text-body.m-0
            = post.user.name
        %a{ href: "/posts/#{post.id}" }
          = image_tag(post.image.url, class: 'rounded float-left', loading: 'lazy')
          %p.text-body.m-0
            = post.comment
.pagenate.mt-3
  = paginate(@posts)
