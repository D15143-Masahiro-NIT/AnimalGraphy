- @users.each do |user|
  .card.mt-1
    %a.card-body.d-flex.align-items-center.text-body{ href: "/users/#{user.id}" }
      .user-image
        = image_tag(user.image.thumb.url, class: 'rounded float-left', loading: 'lazy')
      %p.font-weight-bold.m-0
        = user.name
.pagenate.mt-3
  = paginate(@users)
